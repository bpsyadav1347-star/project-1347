  <script>
    // ====== PRODUCT DATA ======
    const PRODUCTS = [
      {id:1,title:'Classic Tee',price:699,image:'PLACEHOLDER-1.jpg',desc:'Comfort cotton t-shirt'},
      {id:2,title:'Denim Jacket',price:2499,image:'PLACEHOLDER-2.jpg',desc:'Premium washed denim jacket'},
      {id:3,title:'Sporty Hoodie',price:1199,image:'PLACEHOLDER-3.jpg',desc:'Warm and soft fleece hoodie'},
      {id:4,title:'Chino Pants',price:1399,image:'PLACEHOLDER-4.jpg',desc:'Slim-fit chinos'},
      {id:5,title:'Sneakers',price:2999,image:'PLACEHOLDER-5.jpg',desc:'Lightweight street sneakers'},
      {id:6,title:'Cap',price:399,image:'PLACEHOLDER-6.jpg',desc:'Adjustable cap with logo'}
    ];

    const grid = document.getElementById('products-grid');
    const cartCount = document.getElementById('cart-count');
    const CART_KEY = 'simple_cart_v1';

    function renderProducts(list){
      grid.innerHTML = '';
      list.forEach(p=>{
        const card = document.createElement('div'); card.className='card';
        card.innerHTML = `
          <img src="${p.image}" alt="${p.title}" />
          <h3>${p.title}</h3>
          <p style='color:var(--muted);margin:0 0 8px'>${p.desc}</p>
          <div class='price-row'>
            <div class='price'>₹${p.price}</div>
            <button class='add' onclick='addToCart(${p.id})'>Add</button>
          </div>
        `;
        grid.appendChild(card);
      })
    }

    function addToCart(id){
      const cart = JSON.parse(localStorage.getItem(CART_KEY) || '[]');
      cart.push(id);
      localStorage.setItem(CART_KEY,JSON.stringify(cart));
      cartCount.textContent = cart.length;
      alert('Added to cart');
    }

    function loadCartCount(){
      const cart = JSON.parse(localStorage.getItem(CART_KEY) || '[]');
      cartCount.textContent = cart.length;
    }

    function filterProducts(q){
      q = (q || '').trim().toLowerCase();
      if(!q) return renderProducts(PRODUCTS);
      renderProducts(PRODUCTS.filter(p=>p.title.toLowerCase().includes(q) || p.desc.toLowerCase().includes(q)));
    }

    // initial render
    renderProducts(PRODUCTS);
    loadCartCount();

    // ====== USAGE NOTES ======
    // To customize: replace PLACEHOLDER-*.jpg and PLACEHOLDER-LOGO.png with your images.
    // Change the PRODUCTS array to edit item titles, prices and descriptions.
    // When ready to publish: host these files on GitHub Pages / Netlify / Vercel and embed via iframe in Google Sites,
    // or copy pieces (images + text + layout) into Google Sites manually.
  </script>
